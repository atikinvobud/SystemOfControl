{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "YARP":{
    "Routes": {
      "UsersService":{
        "ClusterId": "userscluster",
        "Match": { "Path" : "/users/{**catch-all}"},
        "Transforms":[
          {"PathRemovePrefix": "/users" }
        ]
      },
      "OrderService":{
        "ClusterId": "orderscluster",
        "Match": {"Path": "/orders/{**catch-all}"},
        "Transforms":[
          {"PathRemovePrefix": "/orders"}
        ]
      }
    },
    "Clusters":{
      "userscluster":{
        "Destinations":{
          "users1": {"Address": "http://${USERS_HOST}:${USERS_PORT}/"}
        }
      },
      "orderscluster":{
        "Destinations":{
          "order1": {"Address": "http://${ORDERS_HOST}:${ORDERS_PORT}/"}
        }
      }
    }
  }
}
